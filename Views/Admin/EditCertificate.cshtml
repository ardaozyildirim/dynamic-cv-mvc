@model DinamikCvSitesi.Models.Certificate

@{
    ViewData["Title"] = "Sertifika Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title mb-4">Sertifika Düzenle</h5>
        
        <form asp-action="EditCertificate" method="post">
            <input type="hidden" asp-for="CertificateID" />
            <input type="hidden" asp-for="ProfileID" />
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Sertifika Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="IssuingOrganization" class="form-label">Veren Kurum</label>
                <input asp-for="IssuingOrganization" class="form-control" />
                <span asp-validation-for="IssuingOrganization" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="IssueDate" class="form-label">Alınma Tarihi</label>
                        <input asp-for="IssueDate" class="form-control" type="date" />
                        <span asp-validation-for="IssueDate" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ExpirationDate" class="form-label">Son Geçerlilik Tarihi</label>
                        <input asp-for="ExpirationDate" class="form-control" type="date" id="expirationDate" />
                        <div class="form-text">Süresiz ise boş bırakınız</div>
                        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="CredentialID" class="form-label">Sertifika/Kimlik Numarası</label>
                <input asp-for="CredentialID" class="form-control" />
                <span asp-validation-for="CredentialID" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="CredentialURL" class="form-label">Doğrulama URL</label>
                <input asp-for="CredentialURL" class="form-control" placeholder="https://" />
                <div class="form-text">Sertifikanın doğrulanabileceği URL (varsa)</div>
                <span asp-validation-for="CredentialURL" class="text-danger"></span>
            </div>
            
            <div class="text-end">
                <a asp-action="Certificates" class="btn btn-secondary">İptal</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 