<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CV Sitesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header-area">
        <nav class="navbar navbar-expand-sm navbar-light fixed-top bg-white shadow-sm py-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="text-primary">CV</span> Portfolyo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="About">Hakkımda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Resume">Özgeçmiş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white ms-3 px-4" asp-area="" asp-controller="Admin" asp-action="Login">
                                <i class="fas fa-user-shield me-1"></i> Admin
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5 py-5 bg-dark text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3">CV Portfolyo</h5>
                    <p class="mb-0 text-muted">Profesyonel CV ve portföy sitesi.</p>
                    <p class="text-muted">&copy; @DateTime.Now.Year - Tüm hakları saklıdır.</p>
                </div>
                <div class="col-md-2">
                    <h6 class="mb-3">Bağlantılar</h6>
                    <ul class="list-unstyled">
                        <li><a class="text-muted text-decoration-none" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                        <li><a class="text-muted text-decoration-none" asp-controller="Home" asp-action="About">Hakkımda</a></li>
                        <li><a class="text-muted text-decoration-none" asp-controller="Home" asp-action="Resume">Özgeçmiş</a></li>
                        <li><a class="text-muted text-decoration-none" asp-controller="Home" asp-action="Contact">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-md-4 text-end">
                    <h6 class="mb-3">Sosyal Medya</h6>
                    <div class="social-links">
                        <a href="#" class="text-white me-3"><i class="fab fa-github fa-2x"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-linkedin fa-2x"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-twitter fa-2x"></i></a>
                    </div>
                    <p class="mt-3 mb-0">
                        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none">Gizlilik Politikası</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

