<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CV Sitesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header-area">
        <nav class="navbar navbar-expand-sm navbar-light fixed-top bg-white shadow-sm py-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="text-primary">CV</span> Portfolyo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="About">Hakkımda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Resume">Özgeçmiş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white ms-3 px-4" asp-area="" asp-controller="Admin" asp-action="Login">
                                <i class="fas fa-user-shield me-1"></i> Admin
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="content-wrapper">
        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5 pt-5 pb-5 bg-dark text-white">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="footer-about">
                        <h5 class="text-white mb-4 fw-bold">CV Portfolyo</h5>
                        <p class="text-muted mb-3">Profesyonel CV ve portföy sitesi ile kariyerinizi ön plana çıkarın.</p>
                        <p class="text-muted mb-0">&copy; @DateTime.Now.Year - Tüm hakları saklıdır.</p>
                    </div>
                </div>
                
                <div class="col-lg-2 col-md-6">
                    <div class="footer-links">
                        <h5 class="text-white mb-4 fw-bold">Hızlı Bağlantılar</h5>
                        <ul class="list-unstyled footer-link-list">
                            <li class="mb-2">
                                <a class="text-muted text-decoration-none hover-light" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-angle-right me-2"></i>Anasayfa
                                </a>
                            </li>
                            <li class="mb-2">
                                <a class="text-muted text-decoration-none hover-light" asp-controller="Home" asp-action="About">
                                    <i class="fas fa-angle-right me-2"></i>Hakkımda
                                </a>
                            </li>
                            <li class="mb-2">
                                <a class="text-muted text-decoration-none hover-light" asp-controller="Home" asp-action="Resume">
                                    <i class="fas fa-angle-right me-2"></i>Özgeçmiş
                                </a>
                            </li>
                            <li>
                                <a class="text-muted text-decoration-none hover-light" asp-controller="Home" asp-action="Contact">
                                    <i class="fas fa-angle-right me-2"></i>İletişim
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-6">
                    <div class="footer-contact">
                        <h5 class="text-white mb-4 fw-bold">İletişim Bilgileri</h5>
                        <p class="text-muted">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            Ankara, Türkiye
                        </p>
                        <p class="text-muted">
                            <i class="fas fa-phone me-2"></i>
                            +90 555 123 4567
                        </p>
                        <p class="text-muted">
                            <i class="fas fa-envelope me-2"></i>
                            iletisim@example.com
                        </p>
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-6">
                    <div class="footer-social">
                        <h5 class="text-white mb-4 fw-bold">Sosyal Medya</h5>
                        <div class="social-links mb-4">
                            <a href="#" class="btn btn-outline-light btn-sm me-2"><i class="fab fa-github"></i></a>
                            <a href="#" class="btn btn-outline-light btn-sm me-2"><i class="fab fa-linkedin"></i></a>
                            <a href="#" class="btn btn-outline-light btn-sm me-2"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="btn btn-outline-light btn-sm"><i class="fab fa-instagram"></i></a>
                        </div>
                        <p class="mt-3 mb-0">
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none hover-light">
                                <i class="fas fa-shield-alt me-2"></i>Gizlilik Politikası
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="row mt-4 pt-4 border-top border-secondary">
                <div class="col-md-6">
                    <p class="text-muted mb-md-0 mb-4">
                        CV Portfolyo &copy; @DateTime.Now.Year | Dinamik CV Sitesi
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-0">
                        <a asp-controller="Admin" asp-action="Login" class="text-muted text-decoration-none hover-light">
                            <i class="fas fa-lock me-2"></i>Admin Girişi
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

