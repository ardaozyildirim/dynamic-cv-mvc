@model DinamikCvSitesi.Models.Profile

@{
    ViewData["Title"] = "Hakkımda";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="display-4 mb-4">Hakkımda</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img class="img-fluid rounded" src="@Model.ImagePath" alt="@Model.FullName" />
        }
        else
        {
            <img class="img-fluid rounded" src="~/images/profile-placeholder.jpg" alt="@Model.FullName" />
        }
        
        <div class="card mt-4">
            <div class="card-header">
                <i class="fas fa-id-card me-2"></i> İletişim Bilgileri
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <li class="mb-2">
                            <i class="fas fa-envelope me-2 text-primary"></i> @Model.Email
                        </li>
                    }
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <li class="mb-2">
                            <i class="fas fa-phone me-2 text-primary"></i> @Model.Phone
                        </li>
                    }
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <li class="mb-2">
                            <i class="fas fa-map-marker-alt me-2 text-primary"></i> @Model.Address
                        </li>
                    }
                </ul>

                <div class="mt-3">
                    @if (!string.IsNullOrEmpty(Model.LinkedIn))
                    {
                        <a href="@Model.LinkedIn" target="_blank" class="btn btn-sm btn-outline-primary me-2">
                            <i class="fab fa-linkedin"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(Model.GitHub))
                    {
                        <a href="@Model.GitHub" target="_blank" class="btn btn-sm btn-outline-dark me-2">
                            <i class="fab fa-github"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(Model.Twitter))
                    {
                        <a href="@Model.Twitter" target="_blank" class="btn btn-sm btn-outline-info">
                            <i class="fab fa-twitter"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-body">
                <h2 class="card-title mb-3">@Model.FullName</h2>
                <h5 class="text-secondary mb-3">@Model.Title</h5>
                
                <hr />
                
                <div class="mb-4">
                    <h4><i class="fas fa-info-circle me-2"></i> Kişisel Bilgiler</h4>
                    <p class="lead">@Model.Summary</p>
                </div>
                
                <div class="mb-4">
                    <h4><i class="fas fa-user me-2"></i> Hakkımda</h4>
                    <p>@Html.Raw(Model.AboutMe?.Replace(Environment.NewLine, "<br />"))</p>
                </div>
                
                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Resume" class="btn btn-primary">
                        <i class="fas fa-file-alt me-1"></i> Özgeçmişim
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-envelope me-1"></i> İletişime Geç
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 