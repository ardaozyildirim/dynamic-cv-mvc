@{
    ViewData["Title"] = "İletişim";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="display-4 mb-4">İletişim</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h4 class="mb-4"><i class="fas fa-envelope me-2"></i> İletişim Formu</h4>
                
                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i> @ViewBag.Success
                    </div>
                }
                
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Adınız Soyadınız</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">E-Posta Adresiniz</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Konu</label>
                        <input type="text" class="form-control" id="subject" name="subject" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Mesajınız</label>
                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane me-1"></i> Mesaj Gönder
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <h4 class="mb-4"><i class="fas fa-map-marker-alt me-2"></i> İletişim Bilgileri</h4>
                
                <ul class="list-unstyled">
                    <li class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <i class="fas fa-envelope text-primary fa-2x me-3"></i>
                        </div>
                        <div>
                            <h5>E-posta</h5>
                            <p>ornek@email.com</p>
                        </div>
                    </li>
                    <li class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <i class="fas fa-phone text-primary fa-2x me-3"></i>
                        </div>
                        <div>
                            <h5>Telefon</h5>
                            <p>+90 555 123 45 67</p>
                        </div>
                    </li>
                    <li class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <i class="fas fa-map-marker-alt text-primary fa-2x me-3"></i>
                        </div>
                        <div>
                            <h5>Adres</h5>
                            <p>İstanbul, Türkiye</p>
                        </div>
                    </li>
                </ul>
                
                <hr />
                
                <h5 class="mb-3">Sosyal Medya</h5>
                <div class="d-flex">
                    <a href="#" class="btn btn-outline-primary me-2">
                        <i class="fab fa-linkedin"></i>
                    </a>
                    <a href="#" class="btn btn-outline-dark me-2">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="#" class="btn btn-outline-info">
                        <i class="fab fa-twitter"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 