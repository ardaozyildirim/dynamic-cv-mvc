@model DinamikCvSitesi.Models.Profile

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="row align-items-center my-5">
    <div class="col-lg-4">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img class="img-fluid rounded-circle" src="@Model.ImagePath" alt="@Model.FullName" style="max-width: 300px;" />
        }
        else
        {
            <img class="img-fluid rounded-circle" src="~/images/profile-placeholder.jpg" alt="@Model.FullName" style="max-width: 300px;" />
        }
    </div>
    <div class="col-lg-8">
        <h1 class="display-4">@Model.FullName</h1>
        <h3 class="text-secondary">@Model.Title</h3>
        <hr />
        <p class="lead">@Model.Summary</p>
        <div class="mt-4">
            <a href="@Url.Action("Resume", "Home")" class="btn btn-primary me-2">
                <i class="fas fa-file-alt me-1"></i> Özgeçmişimi Görüntüle
            </a>
            <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-secondary">
                <i class="fas fa-envelope me-1"></i> İletişime Geç
            </a>
        </div>
        <div class="mt-4">
            @if (!string.IsNullOrEmpty(Model.LinkedIn))
            {
                <a href="@Model.LinkedIn" target="_blank" class="text-decoration-none me-3" title="LinkedIn">
                    <i class="fab fa-linkedin fa-2x text-primary"></i>
                </a>
            }
            @if (!string.IsNullOrEmpty(Model.GitHub))
            {
                <a href="@Model.GitHub" target="_blank" class="text-decoration-none me-3" title="GitHub">
                    <i class="fab fa-github fa-2x text-dark"></i>
                </a>
            }
            @if (!string.IsNullOrEmpty(Model.Twitter))
            {
                <a href="@Model.Twitter" target="_blank" class="text-decoration-none" title="Twitter">
                    <i class="fab fa-twitter fa-2x text-info"></i>
                </a>
            }
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-lg-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title">
                    <i class="fas fa-user me-2"></i> Hakkımda
                </h4>
                <p class="card-text">@Model.AboutMe</p>
                <a asp-controller="Home" asp-action="About" class="btn btn-sm btn-outline-primary">
                    Daha fazla
                </a>
            </div>
        </div>
    </div>
</div>
